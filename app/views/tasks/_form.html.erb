<%= form_with(model: @task, local: true) do |form| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= @task.errors.count %><%= t('view.error') %></h2>
      <ul>
        <% @task.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="date">
    <%= form.label :enddeadline %>
    <%= form.date_select :end_on %>
  </div>
  <div class="task_name">
    <%= form.label :task_name %>
    <%= form.text_field :task_name %>
  </div>
  <div class="task_content">
    <%= form.label :content %>
    <%= form.text_field :content %>
  </div>
  <div class="status">
    <%= form.label :status %>
    <%= form.select :status, [ t('view.wip'), t('view.peding'), t('view.done') ], { include_blank: true } %>
  </div>
  <div class="priority">
    <%= form.label :priority %>
    <%= form.select :priority, [ t('view.high'), t('view.medium'), t('view.row')], { include_blank: true } %>
  </div>
  <%= form.submit %>
<% end %>
<%= link_to t('view.back_task_list'), tasks_path %>
