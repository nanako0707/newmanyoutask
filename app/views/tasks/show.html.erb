<h1><%= t('view.task_contents') %></h1>
<p><%= t('view.enddeadline')%>: <%= @task.end_on %></p>
<p><%= t('view.task_name') %>: <%= @task.task_name %></p>
<p><%= t('view.content') %>: <%= @task.content %></p>
<p><%= t('view.status') %>: <%= @task.status %></p>
<p><%= t('view.priority') %>: <%= @task.priority %></p>
<p><%= t('view.label')%>:
  <% @task.task_labels.each do |task_label| %>
    <%= task_label.label.name %>
  <% end %>
</p>
<%= link_to t('view.back_task_list'), tasks_path %>
